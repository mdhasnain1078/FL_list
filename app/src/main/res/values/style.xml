<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Custom Toolbar Style -->
    <style name="CustomToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/white</item>
    </style>

    <style name="ToolbarTitleStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/inter_semi_bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Text Style for Name UI Small -->
    <style name="TextStyle.NameSmall">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <!-- Text Style for Body Small -->
    <style name="TextStyle.BodySmall">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0</item>
    </style>


    <!-- Text Style for Heading/H11 Semi Bold -->
    <style name="TextStyle.HeadingH11">
        <item name="android:fontFamily">@font/inter_semi_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0</item>
    </style>


    <!-- Text Style for UI/Normal Text -->
    <style name="TextStyle.UINormalText">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="txtInputLayoutStyle"
        parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/b_500</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>

    <style name="TextInputLayoutStyle"
        parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/b_500</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>



    <style name="hintTextStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/b_500</item>
        <item name="android:textSize">12sp</item>
    </style>



        <style name="TextStyle">
            <item name="android:fontFamily">@font/inter_medium</item>
            <item name="android:textSize">14sp</item>
            <item name="android:letterSpacing">0</item>
        </style>




</resources>

