<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bottom Shadow -->
    <item android:bottom="10dp">  <!-- Increases the shadow only at the bottom -->
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#40000000"
            android:endColor="#00000000"
            android:angle="90"/>  <!-- Gradient shadow effect -->
        </shape>
    </item>

    <!-- Card Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/>  <!-- Card background -->
            <corners android:radius="8dp"/>  <!-- Match the card corner radius -->
        </shape>
    </item>
</layer-list>
